<div id="flash" class="mb-4">
  <% flash.each do |type, message| %>
    <div class="alert alert-<%= type == 'notice' ? 'success' : 'error' %> p-4 rounded-lg mb-2 text-center font-semibold
                <%= type == 'notice' ? 'bg-green-100 text-green-800 border border-green-300' : 'bg-red-100 text-red-800 border border-red-300' %>">
      <%= message %>
    </div>
  <% end %>
</div>