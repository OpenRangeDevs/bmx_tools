<!-- Skeleton Screen for Race Display -->
<div class="space-y-4 animate-pulse">
  <!-- Club Header Skeleton -->
  <div class="text-center mb-6">
    <div class="h-8 bg-gray-300 rounded-md w-3/4 mx-auto mb-2"></div>
    <div class="h-4 bg-gray-200 rounded-md w-1/2 mx-auto"></div>
  </div>

  <!-- Counter Display Skeleton -->
  <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
    <!-- At Gate Skeleton -->
    <div class="bg-white rounded-xl p-6 shadow-lg border-4 border-gray-200">
      <div class="text-center">
        <div class="h-6 bg-gray-300 rounded w-20 mx-auto mb-4"></div>
        <div class="h-24 bg-gray-300 rounded-lg mb-4"></div>
        <div class="flex justify-center space-x-2">
          <div class="h-12 w-12 bg-gray-200 rounded-lg"></div>
          <div class="h-12 w-12 bg-gray-200 rounded-lg"></div>
        </div>
      </div>
    </div>

    <!-- In Staging Skeleton -->
    <div class="bg-white rounded-xl p-6 shadow-lg border-4 border-gray-200">
      <div class="text-center">
        <div class="h-6 bg-gray-300 rounded w-24 mx-auto mb-4"></div>
        <div class="h-24 bg-gray-300 rounded-lg mb-4"></div>
        <div class="flex justify-center space-x-2">
          <div class="h-12 w-12 bg-gray-200 rounded-lg"></div>
          <div class="h-12 w-12 bg-gray-200 rounded-lg"></div>
        </div>
      </div>
    </div>
  </div>

  <!-- Timer Sections Skeleton -->
  <div class="space-y-4">
    <!-- Registration Deadline Skeleton -->
    <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
      <div class="h-6 bg-blue-200 rounded w-40 mx-auto mb-3"></div>
      <div class="text-center">
        <div class="h-4 bg-blue-100 rounded w-20 mx-auto mb-2"></div>
        <div class="h-12 bg-blue-200 rounded-lg w-32 mx-auto mb-1"></div>
        <div class="h-4 bg-blue-100 rounded w-36 mx-auto"></div>
      </div>
    </div>

    <!-- Race Start Skeleton -->
    <div class="bg-green-50 border border-green-200 rounded-lg p-4">
      <div class="h-6 bg-green-200 rounded w-24 mx-auto mb-3"></div>
      <div class="text-center">
        <div class="h-4 bg-green-100 rounded w-20 mx-auto mb-2"></div>
        <div class="h-16 bg-green-200 rounded-lg w-40 mx-auto mb-1"></div>
        <div class="h-4 bg-green-100 rounded w-32 mx-auto"></div>
      </div>
    </div>
  </div>

  <!-- Admin Link Skeleton -->
  <div class="text-center mt-8">
    <div class="h-12 bg-blue-200 rounded-lg w-48 mx-auto"></div>
  </div>
</div>