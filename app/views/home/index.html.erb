<% content_for :title, "BMX Tools - Real-time Race Tracking" %>

<div class="min-h-screen bg-gradient-to-br from-blue-50 to-orange-50">
  <!-- Hero Section -->
  <div class="bg-gradient-to-r from-blue-600 to-orange-500 text-white">
    <div class="container mx-auto px-4 py-16 text-center">
      <h1 class="text-4xl md:text-6xl font-bold mb-4">
        BMX Tools
      </h1>
      <p class="text-xl md:text-2xl mb-6 text-blue-100">
        Real-time BMX race tracking for tracks and spectators
      </p>
      <p class="text-lg mb-8 text-blue-50 max-w-2xl mx-auto">
        Know exactly what's happening at the track, in real-time, from anywhere. 
        Never miss your rider's moto again.
      </p>
      
      <% if @all_clubs.any? %>
        <a href="#tracks" class="inline-block bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold text-lg hover:bg-blue-50 transition-colors duration-200">
          Find Your Track
        </a>
      <% end %>
    </div>
  </div>

  <!-- Features Section -->
  <div class="container mx-auto px-4 py-12">
    <div class="grid md:grid-cols-3 gap-8 mb-16">
      <div class="text-center p-6">
        <div class="w-16 h-16 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-2">Real-time Updates</h3>
        <p class="text-gray-600">Live moto progression and race status updates. See changes instantly across all devices.</p>
      </div>
      
      <div class="text-center p-6">
        <div class="w-16 h-16 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-2">Mobile-First</h3>
        <p class="text-gray-600">Perfect for trackside viewing. Works on any device, no app download required.</p>
      </div>
      
      <div class="text-center p-6">
        <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
          <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="text-xl font-semibold mb-2">Easy to Use</h3>
        <p class="text-gray-600">Simple, clean interface designed for BMX racing environments. Just works.</p>
      </div>
    </div>

    <!-- Tracks Section -->
    <% if @all_clubs.any? %>
      <div id="tracks" class="mb-16">
        <h2 class="text-3xl font-bold text-center mb-12 text-gray-800">Active BMX Tracks</h2>
        
        <% if @active_clubs.any? %>
          <div class="mb-8">
            <h3 class="text-xl font-semibold mb-6 text-gray-700 flex items-center">
              <span class="w-3 h-3 bg-green-500 rounded-full mr-2"></span>
              Live Races
            </h3>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
              <% @active_clubs.each do |club| %>
                <%= render 'club_card', club: club, status: race_status(club) %>
              <% end %>
            </div>
          </div>
        <% end %>
        
        <% if @inactive_clubs.any? %>
          <div>
            <h3 class="text-xl font-semibold mb-6 text-gray-700 flex items-center">
              <span class="w-3 h-3 bg-gray-400 rounded-full mr-2"></span>
              Scheduled Tracks
            </h3>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
              <% @inactive_clubs.each do |club| %>
                <%= render 'club_card', club: club, status: race_status(club) %>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-16">
        <h3 class="text-2xl font-semibold mb-4 text-gray-700">No Tracks Available</h3>
        <p class="text-gray-600 mb-8">Tracks will appear here once they've been set up in the system.</p>
      </div>
    <% end %>

    <!-- Track Admin Section -->
    <div class="bg-gray-50 rounded-lg p-8 text-center">
      <h3 class="text-2xl font-semibold mb-4 text-gray-800">Track Official?</h3>
      <p class="text-gray-600 mb-6">Manage your track's race progression and settings.</p>
      <% if @all_clubs.any? %>
        <div class="flex flex-wrap justify-center gap-4">
          <% @all_clubs.each do |club| %>
            <%= link_to club_admin_path(club.slug), 
                class: "inline-block bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors duration-200" do %>
              <%= club.name %> Admin
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>