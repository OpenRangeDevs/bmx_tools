<% content_for :title, "#{@club.name} - BMX Race Tracker" %>

<%= turbo_stream_from "club_#{@club.slug}" %>
<%= render "shared/connection_status" %>

<div class="space-y-4">
  <!-- Club Header -->
  <div class="text-center mb-6">
    <h1 class="text-2xl font-bold text-gray-800 mb-2"><%= @club.name %></h1>
    <p class="text-gray-600">Race Day Progress</p>
  </div>

  <!-- Race Display (updates via Turbo Stream) -->
  <div id="race-display">
    <%= render "race_display", race: @race, club: @club %>
  </div>

  <!-- Enhanced Race Times with Countdown Timers -->
  <% if @race_setting.registration_deadline || @race_setting.race_start_time %>
    <div class="space-y-4">
      <!-- Registration Deadline -->
      <% if @race_setting.registration_deadline %>
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4">
          <h3 class="font-semibold text-blue-800 mb-3 text-center">📝 Registration Deadline</h3>
          <div class="text-center text-blue-700 mb-2">
            <div class="text-sm"><%= @race_setting.registration_deadline.strftime("%I:%M %p") %></div>
          </div>
          
          <% if @race_setting.registration_deadline > Time.current %>
            <div data-controller="countdown-timer" 
                 data-countdown-timer-target-time-value="<%= @race_setting.registration_deadline.iso8601 %>"
                 class="text-center">
              <div data-countdown-timer-target="display" class="text-3xl font-bold text-blue-600 mb-1">
                Loading...
              </div>
              <div data-countdown-timer-target="label" class="text-sm text-blue-500">
                Time Remaining to Register
              </div>
            </div>
          <% else %>
            <div class="text-center text-lg font-bold text-gray-500">Registration Closed</div>
          <% end %>
        </div>
      <% end %>

      <!-- Race Start Time -->
      <% if @race_setting.race_start_time %>
        <div class="bg-green-50 border border-green-200 rounded-lg p-4">
          <h3 class="font-semibold text-green-800 mb-3 text-center">🏁 Race Start</h3>
          <div class="text-center text-green-700 mb-2">
            <div class="text-sm"><%= @race_setting.race_start_time.strftime("%I:%M %p") %></div>
          </div>
          
          <% if @race_setting.race_start_time > Time.current %>
            <div data-controller="countdown-timer" 
                 data-countdown-timer-target-time-value="<%= @race_setting.race_start_time.iso8601 %>"
                 class="text-center">
              <div data-countdown-timer-target="display" class="text-4xl font-bold text-green-600 mb-1">
                Loading...
              </div>
              <div data-countdown-timer-target="label" class="text-sm text-green-500">
                Until Racing Begins
              </div>
            </div>
          <% else %>
            <div class="text-center text-xl font-bold text-red-600">🏁 Racing has begun!</div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% end %>

  <!-- Active Notification -->
  <% if @race_setting.notification_active? %>
    <div class="bg-yellow-100 border-l-4 border-yellow-500 p-4 mb-4">
      <div class="flex items-center">
        <div class="flex-shrink-0">
          📢
        </div>
        <div class="ml-3">
          <p class="text-yellow-800 font-semibold">Race Official Announcement</p>
          <p class="text-yellow-700 mt-1"><%= @race_setting.notification_message %></p>
          <% if @race_setting.notification_expires_at %>
            <p class="text-xs text-yellow-600 mt-2">
              Expires: <%= @race_setting.notification_expires_at.strftime("%I:%M %p") %>
            </p>
          <% end %>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Admin Link -->
  <div class="text-center mt-8">
    <%= link_to "Race Official Controls", club_admin_path(@club.slug), 
                class: "inline-block bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold text-lg",
                style: "min-height: 44px; min-width: 44px; touch-action: manipulation;" %>
  </div>
</div>

