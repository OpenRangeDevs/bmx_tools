<div id="in-staging-buttons" class="flex justify-center items-center gap-4 mb-4">
  <!-- Decrement Button (smaller) -->
  <%= form_with model: race, url: club_race_update_path(club.slug), 
                method: :patch, local: false,
                data: { turbo_method: :patch } do |form| %>
    <%= form.hidden_field :at_gate, value: race.at_gate %>
    <%= form.hidden_field :in_staging, value: [[race.in_staging - 1, 0].max, race.at_gate].max %>
    <%= form.submit "-1",
                    data: { 
                      action: "touchstart->counter#handleTouchStart touchend->counter#handleTouchEnd mousedown->counter#handleMouseDown mouseup->counter#handleMouseUp" 
                    }, 
                    style: "background-color: #6c757d; 
                            color: white; 
                            font-size: 16px; 
                            font-weight: bold;
                            min-height: 44px; 
                            min-width: 44px; 
                            padding: 10px 15px;
                            border: none; 
                            border-radius: 8px; 
                            touch-action: manipulation;
                            cursor: pointer;" %>
  <% end %>
  
  <!-- Increment Button (larger) -->
  <%= form_with model: race, url: club_race_update_path(club.slug), 
                method: :patch, local: false,
                data: { turbo_method: :patch } do |form| %>
    <%= form.hidden_field :at_gate, value: race.at_gate %>
    <%= form.hidden_field :in_staging, value: race.in_staging + 1 %>
    <%= form.submit "+1",
                    data: { 
                      action: "touchstart->counter#handleTouchStart touchend->counter#handleTouchEnd mousedown->counter#handleMouseDown mouseup->counter#handleMouseUp" 
                    }, 
                    style: "background-color: #28a745; 
                            color: white; 
                            font-size: 18px; 
                            font-weight: bold;
                            min-height: 44px; 
                            min-width: 66px; 
                            padding: 12px 20px;
                            border: none; 
                            border-radius: 8px; 
                            touch-action: manipulation;
                            cursor: pointer;" %>
  <% end %>
</div>