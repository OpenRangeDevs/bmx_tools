<!-- At Gate Counter Section -->
<div class="counter-section" 
     style="background-color: #ffeeee; 
            border: 3px solid #ff4444; 
            border-radius: 12px; 
            padding: 20px; 
            margin-bottom: 15px;">
  
  <div class="text-center">
    <h2 style="font-size: 20px; font-weight: bold; margin-bottom: 15px; color: #333;">
      🏁 At Gate
    </h2>
    
    <!-- Current Counter Display -->
    <div class="mb-6">
      <span id="at-gate-counter" 
            style="font-size: 72px; 
                   font-weight: bold; 
                   color: #ff4444; 
                   display: block; 
                   line-height: 1;">
        <%= race.at_gate %>
      </span>
    </div>

    <!-- Control Buttons -->
    <%= render "races/at_gate_buttons", race: race, club: club %>
  </div>
</div>

