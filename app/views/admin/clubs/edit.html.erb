<% content_for :title, "Edit #{@club.name}" %>

<div class="min-h-screen bg-gray-50 p-4">
  <!-- Header -->
  <div class="bg-white shadow-sm rounded-lg mb-6 p-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-gray-900">Edit <%= @club.name %></h1>
        <p class="text-gray-600 mt-1">Update club information and settings</p>
      </div>
      <div class="flex space-x-3">
        <%= link_to admin_club_path(@club),
            class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
          </svg>
          View Club
        <% end %>
        <%= link_to admin_clubs_path,
            class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Clubs
        <% end %>
      </div>
    </div>
  </div>

  <!-- Club Status Alert -->
  <% if @club.deleted? %>
    <div class="rounded-md bg-red-50 border border-red-200 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">This club has been deleted</h3>
          <div class="mt-2 text-sm text-red-700">
            <p>This club was deleted on <%= @club.deleted_at.strftime("%B %d, %Y at %l:%M %p") %>. You can still edit basic information but the club is not accessible to users.</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Form -->
  <div class="bg-white shadow-sm rounded-lg p-6" data-controller="slug">
    <%= form_with model: [:admin, @club], local: true, class: "space-y-6" do |form| %>
      <% if @club.errors.any? %>
        <div class="rounded-md bg-red-50 p-4">
          <div class="flex">
            <div class="flex-shrink-0">
              <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
              </svg>
            </div>
            <div class="ml-3">
              <h3 class="text-sm font-medium text-red-800">
                There were <%= pluralize(@club.errors.count, "error") %> with your submission:
              </h3>
              <div class="mt-2 text-sm text-red-700">
                <ul class="list-disc pl-5 space-y-1">
                  <% @club.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
      <% end %>

      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Club Information -->
        <div class="space-y-6">
          <h3 class="text-lg font-medium text-gray-900">Club Information</h3>

          <div>
            <%= form.label :name, "Club Name", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :name,
                required: true,
                data: { slug_target: "name", action: "input->slug#updateSlug" },
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500 sm:text-sm" %>
            <p class="mt-1 text-sm text-gray-500">The full name of the BMX club</p>
          </div>

          <div>
            <%= form.label :slug, "URL Slug", class: "block text-sm font-medium text-gray-700" %>
            <% has_races = @club.race.present? %>
            <%= form.text_field :slug,
                disabled: has_races,
                data: { slug_target: "slug", action: "input->slug#updatePreview" },
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500 sm:text-sm #{'bg-gray-100' if has_races}" %>
            <% if has_races %>
              <p class="mt-1 text-sm text-amber-600">⚠️ URL slug cannot be changed because this club has race data</p>
            <% else %>
              <p class="mt-1 text-sm text-gray-500">URL-friendly identifier for the club</p>
            <% end %>
            <div class="mt-1 text-xs text-gray-500">
              Preview: <code class="bg-gray-100 px-1 rounded">bmxtools.com/<span data-slug-target="preview"><%= @club.slug %></span></code>
            </div>
          </div>

          <div>
            <%= form.label :location, "Location", class: "block text-sm font-medium text-gray-700" %>
            <%= form.text_field :location,
                required: true,
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500 sm:text-sm" %>
            <p class="mt-1 text-sm text-gray-500">City and province/state</p>
          </div>

          <div>
            <%= form.label :contact_email, "Contact Email", class: "block text-sm font-medium text-gray-700" %>
            <%= form.email_field :contact_email,
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500 sm:text-sm" %>
            <p class="mt-1 text-sm text-gray-500">Public contact email for the club (optional)</p>
          </div>

          <div>
            <%= form.label :timezone, "Time Zone", class: "block text-sm font-medium text-gray-700" %>
            <%= form.select :timezone,
                options_for_select(
                  ActiveSupport::TimeZone.all.map { |tz| [tz.to_s, tz.name] },
                  @club.timezone
                ),
                {},
                class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-orange-500 focus:ring-orange-500 sm:text-sm" %>
            <p class="mt-1 text-sm text-gray-500">Time zone for race scheduling</p>
          </div>
        </div>

        <!-- Club Statistics & Actions -->
        <div class="space-y-6">
          <h3 class="text-lg font-medium text-gray-900">Club Statistics</h3>

          <!-- Stats Cards -->
          <div class="grid grid-cols-2 gap-4">
            <div class="bg-blue-50 rounded-lg p-4">
              <div class="text-2xl font-bold text-blue-900">
                <%= @club.race ? 1 : 0 %>
              </div>
              <div class="text-sm text-blue-700">Race Created</div>
            </div>

            <div class="bg-green-50 rounded-lg p-4">
              <div class="text-2xl font-bold text-green-900">
                <%= @club.users.count %>
              </div>
              <div class="text-sm text-green-700">Admin Users</div>
            </div>
          </div>

          <!-- Current Race Status -->
          <% if @club.race %>
            <div class="bg-gray-50 rounded-lg p-4">
              <h4 class="text-sm font-medium text-gray-900 mb-2">Current Race Status</h4>
              <div class="space-y-2 text-sm">
                <div class="flex justify-between">
                  <span class="text-gray-600">At Gate:</span>
                  <span class="font-medium"><%= @club.race.at_gate %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">In Staging:</span>
                  <span class="font-medium"><%= @club.race.in_staging %></span>
                </div>
                <div class="flex justify-between">
                  <span class="text-gray-600">Last Updated:</span>
                  <span class="font-medium"><%= time_ago_in_words(@club.race.updated_at) %> ago</span>
                </div>
              </div>
            </div>
          <% end %>

          <!-- Quick Actions -->
          <div class="space-y-3">
            <h4 class="text-sm font-medium text-gray-900">Quick Actions</h4>

            <%= link_to club_path(@club), target: "_blank",
                class: "w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
              </svg>
              View Public Page
            <% end %>

            <%= link_to club_admin_path(@club), target: "_blank",
                class: "w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              View Admin Page
            <% end %>
          </div>

          <!-- Admin Users -->
          <div>
            <h4 class="text-sm font-medium text-gray-900 mb-2">Admin Users</h4>
            <% if @club.users.any? %>
              <div class="space-y-2">
                <% @club.users.each do |user| %>
                  <div class="flex items-center justify-between text-sm bg-gray-50 rounded p-2">
                    <span class="text-gray-900"><%= user.email %></span>
                    <span class="text-xs text-gray-500">
                      <%= user.tool_permissions.find_by(club: @club)&.role&.humanize %>
                    </span>
                  </div>
                <% end %>
              </div>
            <% else %>
              <p class="text-sm text-gray-500">No admin users assigned</p>
            <% end %>
          </div>
        </div>
      </div>

      <div class="flex justify-between pt-6 border-t">
        <div>
          <% unless @club.deleted? %>
            <%= link_to "Delete Club", admin_club_path(@club), method: :delete,
                data: {
                  confirm: "Are you sure you want to delete #{@club.name}? This action can be undone later."
                },
                class: "inline-flex items-center px-4 py-2 border border-red-300 text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50" %>
          <% end %>
        </div>

        <div class="flex space-x-3">
          <%= link_to "Cancel", admin_club_path(@club),
              class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" %>
          <%= form.submit "Update Club",
              class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md text-white bg-orange-600 hover:bg-orange-700" %>
        </div>
      </div>
    <% end %>
  </div>
</div>
