<% content_for :title, @club.name %>

<div class="min-h-screen bg-gray-50 p-4">
  <!-- Header -->
  <div class="bg-white shadow-sm rounded-lg mb-6 p-6">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold text-gray-900"><%= @club.name %></h1>
        <p class="text-gray-600 mt-1"><%= @club.location %></p>
        <div class="flex items-center mt-2 space-x-4">
          <% if @club.deleted? %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
              Deleted <%= @club.deleted_at.strftime("%B %d, %Y") %>
            </span>
          <% else %>
            <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
              Active
            </span>
          <% end %>
          <span class="text-sm text-gray-500">
            <code class="bg-gray-100 px-2 py-1 rounded text-xs">bmxtools.com/<%= @club.slug %></code>
          </span>
        </div>
      </div>
      <div class="flex space-x-3">
        <%= link_to edit_admin_club_path(@club),
            class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
          </svg>
          Edit Club
        <% end %>
        <%= link_to admin_clubs_path,
            class: "inline-flex items-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
          </svg>
          Back to Clubs
        <% end %>
      </div>
    </div>
  </div>

  <!-- Admin Credentials Alert -->
  <% if flash[:admin_credentials] %>
    <div class="rounded-md bg-green-50 border border-green-200 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-green-800">Club admin user created successfully!</h3>
          <div class="mt-2 text-sm text-green-700">
            <p><strong>Email:</strong> <%= flash[:admin_credentials][:email] %></p>
            <p><strong>Password:</strong> <code class="bg-green-100 px-2 py-1 rounded font-mono"><%= flash[:admin_credentials][:password] %></code></p>
            <p class="mt-2">Please share these credentials with the club administrator. They can log in at <code>/login</code>.</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <!-- Club Status Alert -->
  <% if @club.deleted? %>
    <div class="rounded-md bg-red-50 border border-red-200 p-4 mb-6">
      <div class="flex">
        <div class="flex-shrink-0">
          <svg class="h-5 w-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"></path>
          </svg>
        </div>
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">This club has been deleted</h3>
          <div class="mt-2 text-sm text-red-700">
            <p>This club was deleted on <%= @club.deleted_at.strftime("%B %d, %Y at %l:%M %p") %>. The club is not accessible to users but can be restored if needed.</p>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Club Information -->
      <div class="bg-white shadow-sm rounded-lg p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Club Information</h2>
        <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <dt class="text-sm font-medium text-gray-500">Club Name</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @club.name %></dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">URL Slug</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <code class="bg-gray-100 px-2 py-1 rounded text-xs"><%= @club.slug %></code>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">Location</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @club.location %></dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">Time Zone</dt>
            <dd class="mt-1 text-sm text-gray-900"><%= @club.time_zone %></dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">Contact Email</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <% if @club.contact_email.present? %>
                <a href="mailto:<%= @club.contact_email %>" class="text-orange-600 hover:text-orange-800">
                  <%= @club.contact_email %>
                </a>
              <% else %>
                <span class="text-gray-400">Not provided</span>
              <% end %>
            </dd>
          </div>

          <div>
            <dt class="text-sm font-medium text-gray-500">Created</dt>
            <dd class="mt-1 text-sm text-gray-900">
              <%= @club.created_at.strftime("%B %d, %Y") %>
              <span class="text-gray-500">(<%= time_ago_in_words(@club.created_at) %> ago)</span>
            </dd>
          </div>
        </dl>
      </div>

      <!-- Race Statistics -->
      <div class="bg-white shadow-sm rounded-lg p-6">
        <h2 class="text-lg font-medium text-gray-900 mb-4">Race Information</h2>
        <% if @club.race %>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
            <div class="bg-red-50 rounded-lg p-4 text-center">
              <div class="text-2xl font-bold text-red-900"><%= @race_stats[:current_at_gate] %></div>
              <div class="text-sm text-red-700">At Gate</div>
            </div>

            <div class="bg-orange-50 rounded-lg p-4 text-center">
              <div class="text-2xl font-bold text-orange-900"><%= @race_stats[:current_in_staging] %></div>
              <div class="text-sm text-orange-700">In Staging</div>
            </div>

            <div class="bg-blue-50 rounded-lg p-4 text-center">
              <div class="text-2xl font-bold text-blue-900"><%= @race_stats[:total_races] %></div>
              <div class="text-sm text-blue-700">Total Races</div>
            </div>
          </div>

          <dl class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div>
              <dt class="text-sm font-medium text-gray-500">Last Activity</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <% if @race_stats[:last_activity] %>
                  <%= time_ago_in_words(@race_stats[:last_activity]) %> ago
                <% else %>
                  No activity yet
                <% end %>
              </dd>
            </div>

            <div>
              <dt class="text-sm font-medium text-gray-500">Race Status</dt>
              <dd class="mt-1 text-sm text-gray-900">
                <% if @race_stats[:current_at_gate] > 0 || @race_stats[:current_in_staging] > 0 %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-green-100 text-green-800">
                    Active
                  </span>
                <% else %>
                  <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-gray-100 text-gray-800">
                    Idle
                  </span>
                <% end %>
              </dd>
            </div>
          </dl>
        <% else %>
          <div class="text-center py-8">
            <svg class="mx-auto h-12 w-12 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No race data</h3>
            <p class="mt-1 text-sm text-gray-500">A race will be automatically created when the club is first accessed.</p>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Quick Actions -->
      <div class="bg-white shadow-sm rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Quick Actions</h3>
        <div class="space-y-3">
          <%= link_to club_path(@club), target: "_blank",
              class: "w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"></path>
            </svg>
            View Public Page
          <% end %>

          <%= link_to club_admin_path(@club), target: "_blank",
              class: "w-full inline-flex items-center justify-center px-4 py-2 border border-gray-300 text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
            </svg>
            View Admin Page
          <% end %>

          <%= link_to edit_admin_club_path(@club),
              class: "w-full inline-flex items-center justify-center px-4 py-2 border border-orange-300 text-sm font-medium rounded-md text-orange-700 bg-orange-50 hover:bg-orange-100" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Club
          <% end %>

          <% unless @club.deleted? %>
            <%= link_to admin_club_path(@club), method: :delete,
                data: {
                  confirm: "Are you sure you want to delete #{@club.name}? This action can be undone later."
                },
                class: "w-full inline-flex items-center justify-center px-4 py-2 border border-red-300 text-sm font-medium rounded-md text-red-700 bg-white hover:bg-red-50" do %>
              <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
              </svg>
              Delete Club
            <% end %>
          <% end %>
        </div>
      </div>

      <!-- Admin Users -->
      <div class="bg-white shadow-sm rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Admin Users</h3>
        <% if @club.users.any? %>
          <div class="space-y-3">
            <% @club.users.each do |user| %>
              <div class="flex items-center justify-between p-3 bg-gray-50 rounded-lg">
                <div>
                  <div class="text-sm font-medium text-gray-900"><%= user.email %></div>
                  <div class="text-xs text-gray-500">
                    <%= user.tool_permissions.find_by(club: @club)&.role&.humanize %>
                  </div>
                </div>
                <div class="text-xs text-gray-400">
                  Added <%= time_ago_in_words(user.created_at) %> ago
                </div>
              </div>
            <% end %>
          </div>
        <% else %>
          <div class="text-center py-4">
            <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z"></path>
            </svg>
            <p class="mt-2 text-sm text-gray-500">No admin users assigned</p>
          </div>
        <% end %>
      </div>

      <!-- Recent Activity (placeholder for future audit logging) -->
      <div class="bg-white shadow-sm rounded-lg p-6">
        <h3 class="text-lg font-medium text-gray-900 mb-4">Recent Activity</h3>
        <div class="text-center py-4">
          <svg class="mx-auto h-8 w-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <p class="mt-2 text-sm text-gray-500">Activity logging coming soon</p>
        </div>
      </div>
    </div>
  </div>
</div>
